$('#notice').hide();

// Blind in or out cart.
if ($('#cart tr').length == 1) {
	$('#cart').show('blind', 1000); }

// Dynamically update cart in sidebar (or wherever!)
$('#cart').html("<%=j render @cart %>");

// Animate product title when added to cart.
$('#current_item').css({'background-color':'#88ff88'}).animate({'background-color':'#114411'}, 1000);